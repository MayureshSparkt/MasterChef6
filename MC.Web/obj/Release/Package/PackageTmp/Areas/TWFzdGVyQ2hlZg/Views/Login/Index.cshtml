<main class="login-page valign-wrapper  ">
    <div class="login-wrapp">
        <div class="card">
            <div class="row" style="margin-bottom: 0">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "input-field col s12" }))
                {
                    @Html.AntiForgeryToken()

                    <form class="col s12">
                        @* <div class="logo"><a href="#"><img src="/Content/TWFzdGVyQ2hlZg/images/piramal-foundation.png" class="responsive-img" alt="" /></a></div>*@
                        <div class="row">
                            <div class="input-field col s12">
                                @Html.TextBoxFor(m => m.Username, new { @class = "validate" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger loginerror" })
                                @Html.LabelFor(m => m.Username, "User Name*")
                            </div>
                            <div class="input-field col s12">
                                @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger loginerror" })
                                @Html.LabelFor(m => m.Password, "Password*")
                            </div>
                        </div>
                        <div class="row center">
                            <button class="btn red waves-effect waves-light" type="submit" name="action">Login</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</main>

@Scripts.Render("~/bundles/jquery")
